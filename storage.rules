rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /items/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }
    match /user/{uid}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid && false; // off by default
    }
  }
}
