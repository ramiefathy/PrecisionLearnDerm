{
  "compilerOptions": {
    "lib": ["ES2018"],
    "module": "commonjs",
    "target": "ES2018",
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "incremental": true,
    "tsBuildInfoFile": "lib/.tsbuildinfo",
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/test/**/*",
    "src/test/automated-testing-pipeline.ts",
    "src/test/integrationTestUtils.ts",
    "src/test/run-testing-pipeline.ts",
    "src/test/directGeneratorTest.ts",
    "src/test/ai-drafting.test.ts",
    "src/test/question-generation-pipeline.test.ts"
  ]
}
