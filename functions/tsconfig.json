{
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "commonjs",
    "target": "ES2022",
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "incremental": true,
    "tsBuildInfoFile": "lib/.tsbuildinfo"
  },
  "include": ["src"],
  "exclude": [
    "node_modules", 
    "**/*.test.ts", 
    "**/*.spec.ts", 
    "src/test/automated-testing-pipeline.ts", 
    "src/test/integrationTestUtils.ts", 
    "src/test/run-testing-pipeline.ts",
    "src/test/directGeneratorTest.ts"
  ]
}
